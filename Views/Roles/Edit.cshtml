@model UM_System.Models.Role

@{
    ViewData["Title"] = "Edit";
    var apps = ViewBag.apps as List<Application>;
    var Roles = ViewBag.roles as List<Role>;

}

<h1>Edit</h1>

<h4>Role</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            
            <div class="form-group">
                <label asp-for="ApplicationId" class="control-label"></label>                         
                <select asp-for="ApplicationId" class="form-control">
                    <option value="" selected disabled>-- Select an Application --</option>
                    @foreach (var app in apps)
                    {
                        <option value="@app.Id">@app.Name</option>
                    }
                </select>
                <span asp-validation-for="ApplicationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <input type="hidden" asp-for="Created_at" />

    
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
