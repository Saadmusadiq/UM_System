@model IEnumerable<UM_System.Models.User>

@{
    ViewData["Title"] = "Index";
    var apps = ViewBag.apps as List<Application>;
    var roles = ViewBag.roles as List<Role>;
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
               @*  @Html.DisplayNameFor(model => model.RoleId) *@
               Role
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created_at)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Updated_at)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
             var Name = apps.FirstOrDefault(a => a.Id == item.RoleId)?.Name ?? "Unknown"; 
            var RoleName = roles.FirstOrDefault(a => a.Id == item.RoleId)?.Name ?? "Unknown";
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
               @*  @Html.DisplayFor(modelItem => item.RoleId) *@
                    @RoleName
            </td>
            <td>
                @* @Html.DisplayFor(modelItem => item.ApplicationId) *@
                @Name
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created_at)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Updated_at)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
